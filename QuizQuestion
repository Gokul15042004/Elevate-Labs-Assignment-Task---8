import java.util.*;
class Question {
    String questionText;
    String[] options;
    int correctAnswer;
    Question(String questionText, String[] options, int correctAnswer) {
        this.questionText = questionText;
        this.options = options;
        this.correctAnswer = correctAnswer;
    }
    void display() {
        System.out.println(questionText);
        for (int i = 0; i < options.length; i++) {
            System.out.println((i + 1) + ". " + options[i]);
        }
    }
    boolean checkAnswer(int userAnswer) {
        return userAnswer == correctAnswer;
    }
}
public class QuizQuestion {
    static int askQuestions(Question[] quiz, int index, Scanner sc) {
        if (index == quiz.length) {
            return 0;
        }
        quiz[index].display();
        System.out.print("Enter your answer (1-4): ");
        int ans = sc.nextInt();
        int score = 0;
        if (quiz[index].checkAnswer(ans)) {
            System.out.println("Correct Answer!\n");
            score = 1;
        } else {
            System.out.println("Wrong Answer! The correct answer was option " + quiz[index].correctAnswer + "\n");
        }
        return score + askQuestions(quiz, index + 1, sc);
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Question[] quiz = new Question[5];
        quiz[0] = new Question("When did India got Independence?",
                new String[] { "1947", "1950", "1965", "1971" }, 1);
        quiz[1] = new Question("Which language is the platform independent?",
                new String[] { "Python", "Java", "C++", "Ruby" }, 2);
        quiz[2] = new Question("Which city is known as the Manchester of India?",
                new String[] { "Mumbai", "Delhi", "Bangalore", "Hyderabad" }, 1);
        quiz[3] = new Question("Which city is known as the Software Hub of India?",
                new String[] { "Mumbai", "Delhi", "Bangalore", "Hyderabad" }, 3);
        quiz[4] = new Question("Which language is mainly referred as National language in India?",
                new String[] { "Hindi", "Bengali", "Tamil", "Telugu" }, 1);
        System.out.println("Your Quiz Starts in few seconds...\n");
        int score = askQuestions(quiz, 0, sc);
        System.out.println("Your Final Score: " + score + "/" + quiz.length);
    }
}
